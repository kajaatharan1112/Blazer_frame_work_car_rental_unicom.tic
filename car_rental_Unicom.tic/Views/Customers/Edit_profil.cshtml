@model car_rental_Unicom.tic.Vew_modal.Customers_vew_modal

@{
    ViewData["Title"] = "Edit Customer";
}

<!-- Bootstrap & jQuery -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>

<style>
    /* Glass card style */
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(135deg, #c3ecff 0%, #ffffff 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .glass-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
        }

    .form-control:focus {
        border-color: #1CB5E0;
        box-shadow: 0 0 8px rgba(28, 181, 224, 0.5);
        outline: none;
    }

    .btn-primary {
        background-color: #1CB5E0;
        border-color: #1CB5E0;
        border-radius: 50px;
        transition: background-color 0.3s;
    }

        .btn-primary:hover {
            background-color: #159ec6;
        }

    .btn-success {
        border-radius: 50px;
    }

    .input-icon-wrapper {
        position: relative;
    }

        .input-icon-wrapper i {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            color: #aaa;
        }

        .input-icon-wrapper input,
        .input-icon-wrapper select {
            padding-left: 2.5rem;
        }
    /* Shake animation */
    .shake {
        animation: shake 0.3s;
        border-color: #e74c3c;
    }
    @@keyframes shake {
        0%

    {
        transform: translateX(0);
    }

    25% {
        transform: translateX(-5px);
    }

    50% {
        transform: translateX(5px);
    }

    75% {
        transform: translateX(-5px);
    }

    100% {
        transform: translateX(0);
    }

    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card glass-card shadow">
                <div class="card-header bg-primary text-white rounded-top">
                    <h4 class="mb-0">Edit Customer</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit_profil" method="post" autocomplete="off" id="editCustomerForm">
                        <input type="hidden" asp-for="Id" />

                        <!-- Customer Details -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="input-icon-wrapper">
                                    <i class="bi bi-person-fill"></i>
                                    <input asp-for="Name" class="form-control" placeholder="Name" required />
                                </div>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <div class="input-icon-wrapper">
                                    <i class="bi bi-telephone-fill"></i>
                                    <input asp-for="contactNo" class="form-control" placeholder="Contact No" required />
                                </div>
                                <span asp-validation-for="contactNo" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <div class="input-icon-wrapper">
                                    <i class="bi bi-calendar-fill"></i>
                                    <input asp-for="Age" class="form-control" placeholder="Age" required min="18" id="Age" />
                                </div>
                                <span asp-validation-for="Age" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <div class="input-icon-wrapper">
                                    <i class="bi bi-gender-ambiguous"></i>
                                    <select asp-for="Gender" class="form-select" required>
                                        <option value="">Select Gender</option>
                                        <option value="Male" selected="@("Male" == Model.Gender)">Male</option>
                                        <option value="Female" selected="@("Female" == Model.Gender)">Female</option>
                                        <option value="Other" selected="@("Other" == Model.Gender)">Other</option>
                                    </select>
                                </div>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <div class="input-icon-wrapper">
                                    <i class="bi bi-envelope-fill"></i>
                                    <input asp-for="Email" class="form-control" placeholder="Email" required />
                                </div>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <hr />

                        <!-- Username -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="input-icon-wrapper">
                                    <i class="bi bi-person-badge-fill"></i>
                                    <input asp-for="UserName" class="form-control" id="UserName" placeholder="Username" required autocomplete="off" />
                                </div>
                                <span asp-validation-for="UserName" class="text-danger"></span>
                                <span id="usernameStatus" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Password Section -->
                        <h5 class="text-secondary">Change Password</h5>
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <div class="input-icon-wrapper">
                                    <i class="bi bi-lock-fill"></i>
                                    <input type="password" name="password" class="form-control" placeholder="Current Password" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="input-icon-wrapper">
                                    <i class="bi bi-key-fill"></i>
                                    <input type="password" name="NewPassword" class="form-control" id="NewPassword" placeholder="New Password" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="input-icon-wrapper">
                                    <i class="bi bi-key-fill"></i>
                                    <input type="password" name="ConfirmPassword" class="form-control" id="ConfirmPassword" placeholder="Confirm Password" />
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-success" id="submitBtn">Save Changes</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Real-time username uniqueness check
        $(document).on('input', '#UserName', function () {
            var username = $(this).val();
            var currentId = $('input[name="Id"]').val();
            if (username.length > 2) {
                $.get('/Customers/IsUserNameUnique', { username: username }, function (isUnique) {
                    if (!isUnique && username !== '@Model.UserName') {
                        $('#usernameStatus').text('This username is already taken.').addClass('shake');
                        $('#submitBtn').prop('disabled', true);
                    } else {
                        $('#usernameStatus').text('').removeClass('shake');
                        $('#submitBtn').prop('disabled', false);
                    }
                });
            } else {
                $('#usernameStatus').text('').removeClass('shake');
                $('#submitBtn').prop('disabled', false);
            }
        });

        // Age and password validation on submit
        $('#editCustomerForm').on('submit', function (e) {
            var age = parseInt($('#Age').val(), 10);
            if (isNaN(age) || age < 18) {
                $('#Age').addClass('shake').focus();
                e.preventDefault();
            } else {
                $('#Age').removeClass('shake');
            }

            var newPass = $('#NewPassword').val();
            var confirmPass = $('#ConfirmPassword').val();
            if (newPass && newPass !== confirmPass) {
                $('#NewPassword, #ConfirmPassword').addClass('shake');
                e.preventDefault();
            } else {
                $('#NewPassword, #ConfirmPassword').removeClass('shake');
            }
        });
    </script>
}
