@model car_rental_Unicom.tic.Vew_modal.Customers_vew_modal

@{
    ViewData["Title"] = "Edit Customer";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(135deg, #c3ecf9, #1cb5e0);
        min-height: 100vh;
        padding: 2rem 0;
    }

    /* Glass-card style */
    .glass-card {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 2rem;
        box-shadow: 0 8px 32px rgba(31, 38, 135, 0.37);
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .glass-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 48px rgba(31, 38, 135, 0.5);
        }

    .input-icon-wrapper {
        position: relative;
    }

        .input-icon-wrapper i {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #1CB5E0;
        }

        .input-icon-wrapper input,
        .input-icon-wrapper select {
            padding-left: 2.5rem;
        }

    .btn-custom {
        background-color: #1CB5E0;
        color: white;
        border-radius: 10px;
        transition: 0.3s;
    }

        .btn-custom:hover {
            background-color: #17a2c0;
        }

    /* Shake animation for invalid input */
    .shake {
        animation: shake 0.3s;
        border-color: #dc3545 !important;
    }

    @@keyframes shake {
        0%

    {
        transform: translateX(0);
    }

    25% {
        transform: translateX(-5px);
    }

    50% {
        transform: translateX(5px);
    }

    75% {
        transform: translateX(-5px);
    }

    100% {
        transform: translateX(0);
    }

    }

    .form-control:focus {
        box-shadow: 0 0 8px #1CB5E0;
        border-color: #1CB5E0;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="glass-card">
                <div class="card-header bg-primary text-white mb-3 rounded">
                    <h4 class="mb-0">Edit Customer</h4>
                </div>
                <form asp-action="Edit" method="post" autocomplete="off" id="editCustomerForm">
                    <input type="hidden" asp-for="Id" />

                    <!-- Customer Details -->
                    <div class="row mb-3">
                        <div class="col-md-6 input-icon-wrapper">
                            <i class="bi bi-person-fill"></i>
                            <input asp-for="Name" class="form-control" placeholder="Name" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 input-icon-wrapper">
                            <i class="bi bi-telephone-fill"></i>
                            <input asp-for="contactNo" class="form-control" placeholder="Contact No" required />
                            <span asp-validation-for="contactNo" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4 input-icon-wrapper">
                            <i class="bi bi-calendar-fill"></i>
                            <input asp-for="Age" class="form-control" placeholder="Age" required min="18" id="Age" />
                            <span asp-validation-for="Age" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 input-icon-wrapper">
                            <i class="bi bi-gender-ambiguous"></i>
                            <select asp-for="Gender" class="form-select" required>
                                <option value="">Select Gender</option>
                                <option value="Male" selected="@("Male" == Model.Gender)">Male</option>
                                <option value="Female" selected="@("Female" == Model.Gender)">Female</option>
                                <option value="Other" selected="@("Other" == Model.Gender)">Other</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 input-icon-wrapper">
                            <i class="bi bi-envelope-fill"></i>
                            <input asp-for="Email" class="form-control" placeholder="Email" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <hr />

                    <!-- Username -->
                    <div class="row mb-3 input-icon-wrapper">
                        <i class="bi bi-person-badge-fill"></i>
                        <div class="col-md-6">
                            <input asp-for="UserName" class="form-control" id="UserName" placeholder="Username" required autocomplete="off" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                            <span id="usernameStatus" class="text-danger small"></span>
                        </div>
                    </div>

                    <!-- Password Section -->
                    <h5 class="text-secondary">Change Password</h5>
                    <div class="row mb-3">
                        <div class="col-md-4 input-icon-wrapper">
                            <i class="bi bi-lock-fill"></i>
                            <input type="password" name="password" class="form-control" placeholder="Current Password" />
                        </div>
                        <div class="col-md-4 input-icon-wrapper">
                            <i class="bi bi-lock-fill"></i>
                            <input type="password" name="NewPassword" class="form-control" placeholder="New Password" id="NewPassword" />
                        </div>
                        <div class="col-md-4 input-icon-wrapper">
                            <i class="bi bi-lock-fill"></i>
                            <input type="password" name="ConfirmPassword" class="form-control" placeholder="Confirm Password" id="ConfirmPassword" />
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-custom" id="submitBtn">Save Changes</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Real-time username uniqueness check
        $(document).on('input', '#UserName', function () {
            var username = $(this).val();
            var currentId = $('input[name="Id"]').val();
            if (username.length > 2) {
                $.get('/Customers/IsUserNameUnique', { username: username }, function (isUnique) {
                    if (!isUnique && username !== '@Model.UserName') {
                        $('#usernameStatus').text('This username is already taken.');
                        $('#submitBtn').prop('disabled', true);
                        $('#UserName').addClass('shake');
                        setTimeout(() => { $('#UserName').removeClass('shake'); }, 500);
                    } else {
                        $('#usernameStatus').text('');
                        $('#submitBtn').prop('disabled', false);
                    }
                });
            } else {
                $('#usernameStatus').text('');
                $('#submitBtn').prop('disabled', false);
            }
        });

        // Age verification
        $('#editCustomerForm').on('submit', function (e) {
            var age = parseInt($('#Age').val(), 10);
            if (isNaN(age) || age < 18) {
                alert('Customer must be at least 18 years old.');
                $('#Age').focus().addClass('shake');
                setTimeout(() => { $('#Age').removeClass('shake'); }, 500);
                e.preventDefault();
            }

            // Password match validation
            var newPass = $('#NewPassword').val();
            var confirmPass = $('#ConfirmPassword').val();
            if (newPass && newPass !== confirmPass) {
                alert('New password and confirm password do not match!');
                $('#NewPassword, #ConfirmPassword').addClass('shake');
                setTimeout(() => { $('#NewPassword, #ConfirmPassword').removeClass('shake'); }, 500);
                e.preventDefault();
            }
        });

        // Shake animation on empty required fields
        $('#editCustomerForm').on('submit', function (e) {
            $(this).find('[required]').each(function () {
                if (!$(this).val()) {
                    $(this).addClass('shake');
                    setTimeout(() => { $(this).removeClass('shake'); }, 500);
                    e.preventDefault();
                }
            });
        });
    </script>
}
