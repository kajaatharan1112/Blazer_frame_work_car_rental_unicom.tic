@model car_rental_Unicom.tic.Vew_modal.chackin_vew_modal

@{
    ViewData["Title"] = "Add Bill";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Check In & Add Bill</h4>
                </div>
                <div class="card-body">
                    <form asp-action="AddBill" method="post" autocomplete="off">
                        <input type="hidden" asp-for="booking_id" />
                        <input type="hidden" asp-for="CarId" />

                        <!-- Customer Info -->
                        <div class="mb-3">
                            <label class="form-label">Customer Name</label>
                            <input class="form-control" asp-for="name" readonly />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Car Model</label>
                            <input class="form-control" asp-for="Car_modalName" readonly />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Rent Per Day</label>
                            <input class="form-control" asp-for="RentPerDay" readonly id="rentPerDay" />
                        </div>

                        <!-- Rental Duration -->
                        <div class="mb-3">
                            <label class="form-label">Rental Duration (days)</label>
                            <input class="form-control" asp-for="RentalDuration" type="number" min="1" id="rentalDays" />
                            <span asp-validation-for="RentalDuration" class="text-danger"></span>
                        </div>

                        <!-- Maintenance Charge -->
                        <div class="mb-3">
                            <label class="form-label">Maintenance Charge</label>
                            <input class="form-control" asp-for="MaintenanceCharge" type="number" min="0" id="maintenanceCharge" />
                            <span asp-validation-for="MaintenanceCharge" class="text-danger"></span>
                        </div>

                        <!-- Total -->
                        <div class="mb-3">
                            <label class="form-label">Total Amount</label>
                            <input class="form-control" asp-for="total_amount" id="totalAmount" readonly />
                        </div>

                        <button type="submit" class="btn btn-success w-100">Submit & Check In</button>
                        <a asp-action="Bookings" class="btn btn-link w-100 mt-2">Back to Bookings</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function calculateTotal() {
            let rentPerDay = parseFloat(document.getElementById("rentPerDay").value) || 0;
            let days = parseInt(document.getElementById("rentalDays").value) || 0;
            let maintenance = parseFloat(document.getElementById("maintenanceCharge").value) || 0;

            let total = (rentPerDay * days) + maintenance;
            document.getElementById("totalAmount").value = total.toFixed(2);
        }

        document.getElementById("rentalDays").addEventListener("input", calculateTotal);
        document.getElementById("maintenanceCharge").addEventListener("input", calculateTotal);
    </script>
}
