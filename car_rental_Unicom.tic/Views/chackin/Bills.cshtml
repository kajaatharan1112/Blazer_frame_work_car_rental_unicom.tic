@model IEnumerable<car_rental_Unicom.tic.Vew_modal.chackin_vew_modal>

@{
    ViewData["Title"] = "Bills";
}

<!-- Bootstrap & Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<style>
    /* Page & Card styling */
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(135deg, #c3ecf9, #1cb5e0);
        min-height: 100vh;
        padding: 2rem 0;
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 1.5rem;
        box-shadow: 0 8px 32px rgba(31, 38, 135, 0.37);
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .glass-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 48px rgba(31, 38, 135, 0.5);
        }

    .input-icon-wrapper {
        position: relative;
    }

        .input-icon-wrapper i {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #1CB5E0;
        }

        .input-icon-wrapper input {
            padding-left: 2.5rem;
        }

    .btn-custom {
        background-color: #1CB5E0;
        color: white;
        border-radius: 10px;
        transition: 0.3s;
    }

        .btn-custom:hover {
            background-color: #17a2c0;
        }

    .text-white {
        color: #fff !important;
    }
    /* Shake animation for invalid input */
    .shake {
        animation: shake 0.3s;
        border-color: #dc3545 !important;
    }
    @@keyframes shake {
        0%

    {
        transform: translateX(0);
    }

    25% {
        transform: translateX(-5px);
    }

    50% {
        transform: translateX(5px);
    }

    75% {
        transform: translateX(-5px);
    }

    100% {
        transform: translateX(0);
    }

    }

    .form-control:focus {
        box-shadow: 0 0 8px #1CB5E0;
        border-color: #1CB5E0;
    }
</style>

<div class="container">
    <h2 class="text-white mb-4">Bill History</h2>
    <div class="row">
        @foreach (var bill in Model)
        {
            <div class="col-md-4 mb-4">
                <!-- Glass Card for Bill -->
                <div class="glass-card">
                    <h5 class="text-white mb-2">Bill #: @bill.bill_id</h5>
                    <p class="text-white mb-3">
                        <strong>Customer:</strong> @bill.name <br />
                        <strong>Car:</strong> @bill.Car_modalName <br />
                        <strong>Staff ID:</strong> @bill.staff_id <br />
                        <strong>Total Amount:</strong> @bill.total_amount <br />
                        <strong>Rental Duration:</strong> @bill.RentalDuration <br />
                        <strong>Status:</strong> @bill.boking_status
                    </p>
                    <div class="d-flex justify-content-between">
                        <button class="btn btn-custom btn-sm" data-bs-toggle="modal" data-bs-target="#viewModal-@bill.bill_id">View</button>
                        <button class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#editModal-@bill.bill_id">Edit</button>
                        <form asp-action="DeleteBill" asp-route-id="@bill.bill_id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this bill?');">Delete</button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- View Modal -->
            <div class="modal fade" id="viewModal-@bill.bill_id" tabindex="-1" aria-labelledby="viewModalLabel-@bill.bill_id" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content glass-card">
                        <div class="modal-header bg-info text-white">
                            <h5 class="modal-title" id="viewModalLabel-@bill.bill_id">Bill Details</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body text-white">
                            <p><strong>Bill ID:</strong> @bill.bill_id</p>
                            <p><strong>Customer:</strong> @bill.name</p>
                            <p><strong>Car:</strong> @bill.Car_modalName</p>
                            <p><strong>Staff ID:</strong> @bill.staff_id</p>
                            <p><strong>Total Amount:</strong> @bill.total_amount</p>
                            <p><strong>Rental Duration:</strong> @bill.RentalDuration</p>
                            <p><strong>Status:</strong> @bill.boking_status</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Edit Modal -->
            <div class="modal fade" id="editModal-@bill.bill_id" tabindex="-1" aria-labelledby="editModalLabel-@bill.bill_id" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content glass-card">
                        <div class="modal-header bg-warning">
                            <h5 class="modal-title" id="editModalLabel-@bill.bill_id">Edit Bill</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <form asp-action="EditBill" method="post" id="editForm-@bill.bill_id">
                            <div class="modal-body">
                                <input type="hidden" name="bill_id" value="@bill.bill_id" />

                                <div class="mb-2 input-icon-wrapper">
                                    <i class="bi bi-person-badge-fill"></i>
                                    <input class="form-control" name="staff_id" value="@bill.staff_id" placeholder="Staff ID" required />
                                </div>
                                <div class="mb-2 input-icon-wrapper">
                                    <i class="bi bi-wallet-fill"></i>
                                    <input class="form-control" name="total_amount" value="@bill.total_amount" placeholder="Total Amount" required />
                                </div>
                                <div class="mb-2 input-icon-wrapper">
                                    <i class="bi bi-clock-fill"></i>
                                    <input class="form-control" name="RentalDuration" value="@bill.RentalDuration" placeholder="Rental Duration" required />
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-custom">Save Changes</button>
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Shake animation for invalid edit form fields
        @foreach (var bill in Model)
        {
                <text>
                $("#editForm-@bill.bill_id").on("submit", function (e) {
                    let isValid = true;
                    $(this).find("input[required]").each(function () {
                        if (!$(this).val()) {
                            $(this).addClass("shake");
                            isValid = false;
                            setTimeout(() => { $(this).removeClass("shake"); }, 500);
                        }
                    });
                    if (!isValid) e.preventDefault();
                });
                </text>
        }
    </script>
}
