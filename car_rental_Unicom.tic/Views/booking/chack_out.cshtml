@model IEnumerable<car_rental_Unicom.tic.Vew_modal.home_view_modal>

@{
    ViewData["Title"] = "Car View";
    var today = DateTime.Now.Date;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<div class="container mt-5">
    <h2 class="mb-4 text-center">Car View</h2>

    <!-- Filter Buttons -->
    <div class="d-flex justify-content-center mb-4">
        <button class="btn btn-primary me-2" id="filterToday">Today Booking</button>
        <button class="btn btn-success me-2" id="filterFuture">Future Booking</button>
        <button class="btn btn-warning" id="filterPast">Past Booking</button>
        <button class="btn btn-secondary" id="filterAll">All</button>
    </div>

    <!-- Booking Table -->
    <div id="bookingTable">
        @foreach (var booking in Model)
        {
            var startDate = DateTime.Parse(booking.start_date).Date;
            var endDate = startDate.AddDays(int.Parse(booking.dayes)).Date;

            // Format as yyyy-MM-dd for data attributes
            var startDateStr = startDate.ToString("yyyy-MM-dd");
            var endDateStr = endDate.ToString("yyyy-MM-dd");

            <div class="card mb-3 booking-card"
                 data-status="@booking.boking_status"
                 data-start-date="@startDateStr"
                 data-end-date="@endDateStr">
                <div class="card-body">
                    <h5 class="card-title">Car ID: @booking.car_id</h5>
                    <p class="card-text"><strong>Booking ID:</strong> @booking.booking_id</p>
                    <p class="card-text"><strong>Name:</strong> @booking.name</p>
                    <p class="card-text"><strong>Start Date:</strong> @booking.start_date</p>
                    <p class="card-text"><strong>Days:</strong> @booking.dayes</p>
                    <p class="card-text"><strong>Status:</strong> @booking.boking_status</p>

                    @if (startDate == today && booking.boking_status == "active")
                    {
                        <!-- Today Booking: Checkout Button -->
                        <form method="post" asp-action="Checkout" asp-controller="booking">
                            <input type="hidden" name="car_id" value="@booking.car_id" />
                            <input type="hidden" name="booking_id" value="@booking.booking_id" />
                            <button type="submit" class="btn btn-primary">Check Out</button>
                        </form>
                    }
                    else if (startDate > today)
                    {
                        <!-- Future Booking: Delete Button -->
                        <form method="post" asp-action="Delete" asp-controller="booking">
                            <input type="hidden" name="booking_id" value="@booking.booking_id" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    }
                    else if (endDate < today && booking.boking_status == "active")
                    {
                        <!-- Past Booking: Checkout and Delete Buttons -->
                        <form method="post" asp-action="Checkout" asp-controller="booking" class="d-inline">
                            <input type="hidden" name="car_id" value="@booking.car_id" />
                            <input type="hidden" name="booking_id" value="@booking.booking_id" />
                            <button type="submit" class="btn btn-primary">Check Out</button>
                        </form>
                        <form method="post" asp-action="Delete" asp-controller="booking" class="d-inline">
                            <input type="hidden" name="booking_id" value="@booking.booking_id" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    }
                </div>
            </div>
        }
    </div>
</div>

<script>
    function getTodayStr() {
        // Always get local date in yyyy-MM-dd
        const today = new Date();
        return today.toISOString().split('T')[0];
    }

    $(document).ready(function () {
        $('#filterToday').on('click', function () {
            const today = getTodayStr();
            $('.booking-card').hide().filter(function () {
                return $(this).data('start-date') === today;
            }).show();
        });

        $('#filterFuture').on('click', function () {
            const today = getTodayStr();
            $('.booking-card').hide().filter(function () {
                return $(this).data('start-date') > today;
            }).show();
        });

        $('#filterPast').on('click', function () {
            const today = getTodayStr();
            $('.booking-card').hide().filter(function () {
                return $(this).data('end-date') < today;
            }).show();
        });

        $('#filterAll').on('click', function () {
            $('.booking-card').show();
        });
    });
</script>