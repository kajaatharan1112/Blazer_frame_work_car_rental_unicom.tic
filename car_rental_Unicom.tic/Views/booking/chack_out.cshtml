@model IEnumerable<car_rental_Unicom.tic.Vew_modal.home_view_modal>

@{
    ViewData["Title"] = "Car View (DOM Based)";
    var today = DateTime.Now.Date;
}

<!-- Bootstrap & jQuery -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Google Font: Poppins -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

<!-- Font Awesome Icons -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<style>
    /* ===== Global Body ===== */
    body {
        font-family: 'Poppins', sans-serif;
        background: #f8f9fa;
    }

    /* ===== Page Heading ===== */
    h2 {
        font-weight: 700;
        background: linear-gradient(90deg, #007bff, #28a745, #ffc107);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    /* ===== Booking Card Style ===== */
    .booking-card {
        border-radius: 12px;
        transition: transform 0.2s, box-shadow 0.2s;
        font-size: 14px;
    }

        /* Hover effect for card */
        .booking-card:hover {
            transform: scale(1.02);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15);
        }

    /* Booking Name (highlight) */
    .booking-name {
        font-size: 18px;
        font-weight: 600;
        color: #007bff;
    }

    /* Button Styles */
    .btn-sm {
        border-radius: 8px;
        padding: 5px 12px;
        font-size: 13px;
    }

    .filter-btn {
        min-width: 160px;
        font-weight: 600;
        border-radius: 10px;
    }
</style>

<div class="container mt-5">
    <!-- Page Title -->
    <h2 class="text-center mb-4"><i class="fa-solid fa-car"></i> Car Booking View</h2>

    <!-- 🔹 Filter Buttons -->
    <div class="d-flex justify-content-center mb-4 flex-wrap gap-2">
        <button class="btn btn-primary filter-btn" onclick="filterBookings('today')" type="button"><i class="fa-solid fa-calendar-day"></i> Today</button>
        <button class="btn btn-success filter-btn" onclick="filterBookings('future')" type="button"><i class="fa-solid fa-calendar-plus"></i> Future</button>
        <button class="btn btn-warning filter-btn" onclick="filterBookings('past')" type="button"><i class="fa-solid fa-calendar-xmark"></i> Past</button>
        <button class="btn btn-secondary filter-btn" onclick="filterBookings('all')" type="button"><i class="fa-solid fa-list"></i> All</button>
    </div>

    <!-- 🔹 Booking Cards Container -->
    <div id="bookingTable">
        @foreach (var booking in Model)
        {
            var startDate = DateTime.Parse(booking.start_date).Date;
            var endDate = startDate.AddDays(int.Parse(booking.dayes)).Date;

            <div class="card booking-card shadow-sm mb-3 p-3"
                 data-start-date="@startDate.ToString("yyyy-MM-dd")"
                 data-end-date="@endDate.ToString("yyyy-MM-dd")">
                <h5 class="booking-name"><i class="fa-solid fa-user"></i> @booking.name</h5>
                <p><i class="fa-solid fa-calendar-check"></i> <strong>Start:</strong> @booking.start_date</p>
                <p><i class="fa-solid fa-clock"></i> <strong>Days:</strong> @booking.dayes</p>
                <p>
                    <i class="fa-solid fa-info-circle"></i>
                    <strong>Status:</strong>
                    <span class="badge @(booking.boking_status == "active" ? "bg-success" : "bg-danger")">
                        @booking.boking_status
                    </span>
                </p>
                <div class="mt-2">
                    @if ((startDate == today || endDate < today) && booking.boking_status == "active")
                    {
                        <!-- Checkout Form -->
                        <form method="get" asp-action="Details" asp-controller="Chack_out" class="d-inline">
                            <input type="hidden" name="id" value="@booking.booking_id" />
                            <button type="submit" class="btn btn-primary btn-sm">
                                <i class="fa-solid fa-right-from-bracket"></i> Check Out
                            </button>
                        </form>
                    }
                    <!-- Delete Form -->
                    <form method="post" asp-action="Delete" asp-controller="Chack_out" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this booking?');">
                        <input type="hidden" name="id" value="@booking.booking_id" />
                        <button type="submit" class="btn btn-danger btn-sm">
                            <i class="fa-solid fa-trash"></i> Delete
                        </button>
                    </form>
                </div>
            </div>
        }
    </div>
</div>

<script>
    function filterBookings(type) {
        const today = new Date().toISOString().split('T')[0];
        $('.booking-card').each(function () {
            const start = $(this).data('start-date');
            const end = $(this).data('end-date');
            let show = false;
            if (type === 'all') show = true;
            else if (type === 'today' && start === today) show = true;
            else if (type === 'future' && start > today) show = true;
            else if (type === 'past' && end < today) show = true;
            $(this).toggle(show);
        });
    }
</script>
