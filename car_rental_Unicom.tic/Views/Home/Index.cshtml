@model List<car_rental_Unicom.tic.Vew_modal.home_view_modal>

@{
    ViewData["Title"] = "Car Page";
}

<!-- Bootstrap & FontAwesome & Google Fonts -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet" />

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(135deg, #f0f4f8, #e0e9f8);
        color: #1f2a40;
    }

    /* Hero Banner */
    .hero-banner {
        background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('https://images.unsplash.com/photo-1552519507-da3b142c6e3d?q=80&w=2070&auto=format&fit=crop');
        background-size: cover;
        background-position: center;
        padding: 50px 20px;
        border-radius: 20px;
        text-align: center;
        color: white;
        margin-bottom: 30px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.3);
    }

        .hero-banner h1 {
            font-weight: 700;
            font-size: 3rem;
            animation: fadeInDown 1s ease;
        }

        .hero-banner p {
            font-size: 1.2rem;
            margin-top: 10px;
            animation: fadeInUp 1.2s ease;
        }

    @@keyframes fadeInDown {
        from

    {
        opacity: 0;
        transform: translateY(-30px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
    @@keyframes fadeInUp {
        from

    {
        opacity: 0;
        transform: translateY(30px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    /* Glass-card style */
    .glass-card {
        background: rgba(255,255,255,0.15);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        box-shadow: 0 8px 32px rgba(0,0,0,0.1);
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .glass-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 40px rgba(0,0,0,0.15);
        }

    /* Card image */
    .card-img-top {
        height: 220px;
        object-fit: cover;
        border-bottom: 3px solid #eee;
    }

    /* Status badge */
    .status-badge {
        position: absolute;
        top: 15px;
        right: 15px;
        padding: 6px 15px;
        font-size: 0.8rem;
        font-weight: 700;
        border-radius: 30px;
        color: #fff;
        box-shadow: 0 0 10px rgba(0,0,0,0.2);
        animation: pulse 1.5s infinite;
    }

        .status-badge.available {
            background: linear-gradient(45deg, #28a745, #34d058);
        }

        .status-badge.unavailable {
            background: linear-gradient(45deg, #dc3545, #ff5f6d);
        }

    @@keyframes pulse {
        0%

    {
        box-shadow: 0 0 5px rgba(0,0,0,0.3);
    }

    50% {
        box-shadow: 0 0 15px rgba(0,0,0,0.6);
    }

    100% {
        box-shadow: 0 0 5px rgba(0,0,0,0.3);
    }

    }

    /* Buttons */
    .btn-primary, .btn-success, .btn-secondary {
        border-radius: 50px;
        font-weight: 600;
        transition: all 0.3s ease-in-out;
    }

    .btn-primary {
        background: #1CB5E0;
        border: none;
    }

        .btn-primary:hover {
            background: #159ec6;
            box-shadow: 0 0 12px rgba(28,181,224,0.4);
        }

    .btn-success {
        background: #28a745;
        border: none;
    }

        .btn-success:hover {
            background: #218838;
        }

    .btn-secondary {
        background: #6c757d;
        border: none;
    }

        .btn-secondary:hover {
            background: #5a6268;
        }

    /* Card animation */
    .card {
        opacity: 0;
        transform: translateY(50px);
        animation: slideUp 0.8s forwards;
    }
    @@keyframes slideUp {
        to

    {
        opacity: 1;
        transform: translateY(0);
    }

    }

    /* Modal Zoom */
    .modal.fade .modal-dialog {
        transform: scale(0.7);
        transition: transform 0.3s ease-out;
    }

    .modal.show .modal-dialog {
        transform: scale(1);
    }
</style>

<div class="container mt-4">
    <!-- Hero Banner -->
    <div class="hero-banner">
        <h1 id="greeting-title"><i class="fas fa-car-on me-2"></i> Find Your Perfect Ride!</h1>
        <p id="greeting-message">Your next adventure awaits. Explore our premium range of available cars.</p>
    </div>

    <!-- Car Cards -->
    <div class="row">
        @foreach (var car in Model)
        {
            var isAvailable = car.car_status.Equals("Available", StringComparison.OrdinalIgnoreCase);
            var images = car.image_path.Split('#');

            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card glass-card position-relative h-100">
                    <img src="@images.FirstOrDefault()" class="card-img-top" alt="@car.Car_modalName" />
                    <div class="status-badge @(isAvailable ? "available" : "unavailable")">
                        <i class="fas @(isAvailable ? "fa-check-circle" : "fa-times-circle") me-1"></i> @(isAvailable ? "Available" : "Unavailable")
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@car.Car_modalName (@car.year)</h5>
                        <p class="card-text-specs"><i class="fas fa-hashtag fa-fw"></i> @car.number_plact</p>
                        <button class="btn btn-primary mt-auto w-100" data-bs-toggle="modal" data-bs-target="#carModal-@car.CarId">
                            <i class="fas fa-eye me-1"></i> View Details
                        </button>
                    </div>
                </div>
            </div>

            <!-- Modal -->
            <div class="modal fade" id="carModal-@car.CarId" tabindex="-1">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content glass-card p-3">
                        <div class="modal-header">
                            <h5 class="modal-title"><i class="fas fa-car-side me-2"></i> @car.Car_modalName</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            @if (images.Length > 0)
                            {
                                <div id="carousel-@car.CarId" class="carousel slide mb-3" data-bs-ride="carousel">
                                    <div class="carousel-inner">
                                        @for (int i = 0; i < images.Length; i++)
                                        {
                                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                                <img src="@images[i]" class="d-block w-100 rounded" alt="Image @(i + 1)" />
                                            </div>
                                        }
                                    </div>
                                    @if (images.Length > 1)
                                    {
                                        <button class="carousel-control-prev" type="button" data-bs-target="#carousel-@car.CarId" data-bs-slide="prev">
                                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        </button>
                                        <button class="carousel-control-next" type="button" data-bs-target="#carousel-@car.CarId" data-bs-slide="next">
                                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        </button>
                                    }
                                </div>
                            }
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item"><b>Year:</b> @car.year</li>
                                <li class="list-group-item"><b>Number Plate:</b> @car.number_plact</li>
                                <li class="list-group-item"><b>AC:</b> @car.ac</li>
                                <li class="list-group-item"><b>Top Speed:</b> @car.top_speed</li>
                                <li class="list-group-item"><b>Gear:</b> @car.Gear_System</li>
                                <li class="list-group-item"><b>Mileage:</b> @car.milage</li>
                                <li class="list-group-item"><b>Rent/Day:</b> @car.RentPerDay</li>
                            </ul>

                            @if (!isAvailable)
                            {
                                <div class="alert alert-warning mt-3">
                                    <i class="fas fa-exclamation-triangle me-2"></i> This car is currently booked.
                                </div>
                            }
                        </div>
                        <div class="modal-footer">
                            <form asp-action="AddBooking" method="get">
                                <input type="hidden" name="carId" value="@car.CarId" />
                                <button class="btn btn-success"><i class="fas fa-check-circle me-2"></i> Book This Car</button>
                            </form>
                            <button class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
    // Random greeting and card animation
    document.addEventListener('DOMContentLoaded', function () {
        const greetings = [
            { title: 'Your Journey Starts Here!', message: 'Find the perfect car for your next road trip.' },
            { title: 'Drive in Style!', message: 'Explore our fleet and book your favorite model today.' },
            { title: 'Welcome to Premium Rentals!', message: 'Quality cars for unforgettable adventures.' }
        ];
        const randomGreeting = greetings[Math.floor(Math.random() * greetings.length)];
        document.getElementById('greeting-title').innerHTML = `<i class="fas fa-car-on me-2"></i> ${randomGreeting.title}`;
        document.getElementById('greeting-message').textContent = randomGreeting.message;

        // Animate cards with delay
        const cards = document.querySelectorAll(".card");
        cards.forEach((card, index) => { card.style.animationDelay = `${index * 0.3}s`; });
    });
</script>
