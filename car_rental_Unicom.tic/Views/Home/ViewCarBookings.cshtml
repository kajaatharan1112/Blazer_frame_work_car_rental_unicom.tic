@model List<car_rental_Unicom.tic.Vew_modal.home_view_modal>

@{
    ViewData["Title"] = "Car Bookings";
}

<h2>Car Bookings</h2>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">No bookings found for this car.</div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Booking ID</th>
                <th>License Number</th>
                <th>User ID</th>
                <th>Name</th>
                <th>Start Date</th>
                <th>Days</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.booking_id</td>
                <td>@booking.licence_number</td>
                <td>@booking.user_id</td>
                <td>@booking.name</td>
                <td>@booking.start_date</td>
                <td>@booking.dayes</td>
                <td>@booking.boking_status</td>
            </tr>
        }
        </tbody>
    </table>
}
