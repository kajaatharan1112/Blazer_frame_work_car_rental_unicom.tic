@model List<car_rental_Unicom.tic.Vew_modal.home_view_modal>

@{
    ViewData["Title"] = "Car Bookings";
    var carId = Model.FirstOrDefault()?.car_id; // Get carId from the first booking
}

<h2>Car Bookings</h2>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">No bookings found for this car.</div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Booking ID</th>
                <th>License Number</th>
                <th>User ID</th>
                <th>Name</th>
                <th>Start Date</th>
                <th>Days</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.booking_id</td>
                <td>@booking.licence_number</td>
                <td>@booking.user_id</td>
                <td>@booking.name</td>
                <td>@booking.start_date</td>
                <td>@booking.dayes</td>
                <td>@booking.boking_status</td>
                <td>
                    <form asp-action="DeleteBooking" method="post" style="display:inline;">
                        <input type="hidden" name="bookingId" value="@booking.booking_id" />
                        <input type="hidden" name="carId" value="@carId" />
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Delete this booking?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
