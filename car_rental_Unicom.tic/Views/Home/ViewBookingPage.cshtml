@model List<car_rental_Unicom.tic.Vew_modal.home_view_modal>

@{
    ViewData["Title"] = "Your Bookings";
}

<!-- Bootstrap & FontAwesome & Google Fonts -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet" />

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(135deg, #f0f4f8, #e0e9f8);
        color: #1f2a40;
    }

    /* Glass-card container */
    .glass-card {
        background: rgba(255,255,255,0.15);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        box-shadow: 0 8px 32px rgba(0,0,0,0.1);
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .glass-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 40px rgba(0,0,0,0.15);
        }

    /* Card Header */
    .card-header {
        border-top-left-radius: 20px;
        border-top-right-radius: 20px;
    }

    /* Buttons */
    .btn-primary, .btn-danger {
        border-radius: 50px;
        font-weight: 600;
        transition: all 0.3s ease-in-out;
    }

    .btn-primary {
        background: #1CB5E0;
        border: none;
    }

        .btn-primary:hover {
            background: #159ec6;
            box-shadow: 0 0 12px rgba(28,181,224,0.4);
        }

    .btn-danger {
        background: #dc3545;
        border: none;
    }

        .btn-danger:hover {
            background: #c82333;
            box-shadow: 0 0 12px rgba(220,53,69,0.4);
        }

    /* Table hover & glow effect */
    .table-hover tbody tr:hover {
        background-color: rgba(28, 181, 224, 0.1);
    }

    /* Input-icon wrapper placeholder for filters */
    .input-icon-wrapper {
        position: relative;
    }

        .input-icon-wrapper input {
            padding-left: 35px;
            border-radius: 50px;
            border: 1px solid #ccc;
            transition: all 0.3s;
        }

            .input-icon-wrapper input:focus {
                border-color: #1CB5E0;
                box-shadow: 0 0 8px rgba(28,181,224,0.5);
                outline: none;
            }

        .input-icon-wrapper i {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            color: #aaa;
        }

    /* Shake animation for invalid input */
    @@keyframes shake {
        0%, 100%

    {
        transform: translateX(0);
    }

    25% {
        transform: translateX(-5px);
    }

    50% {
        transform: translateX(5px);
    }

    75% {
        transform: translateX(-5px);
    }

    }

    .shake {
        animation: shake 0.3s;
    }

</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card glass-card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="fas fa-calendar-check me-2"></i> Your Bookings</h3>
                </div>
                <div class="card-body">
                    @if (Model == null || !Model.Any())
                    {
                        <div class="alert alert-info text-center">
                            <i class="fas fa-info-circle me-2"></i> You have no bookings.
                        </div>
                    }
                    else
                    {
                        <!-- Table Responsive -->
                        <div class="table-responsive">
                            <table class="table table-hover table-bordered align-middle">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Booking ID</th>
                                        <th>Car ID</th>
                                        <th>Start Date</th>
                                        <th>Days</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var booking in Model)
                                    {
                                        <tr>
                                            <td>@booking.booking_id</td>
                                            <td>@booking.car_id</td>
                                            <td>@booking.start_date</td>
                                            <td>@booking.dayes</td>
                                            <td>
                                                <form asp-action="DeleteBooking" method="post" style="display:inline;">
                                                    <input type="hidden" name="bookingId" value="@booking.booking_id" />
                                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Delete this booking?');">
                                                        <i class="fas fa-trash-alt me-1"></i> Delete
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- jQuery & Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
    // Placeholder for real-time validation
    $(document).ready(function() {
        // Example: highlight invalid inputs
        $("input[required]").on("input", function() {
            if (!this.checkValidity()) {
                $(this).addClass("shake");
                setTimeout(() => { $(this).removeClass("shake"); }, 300);
            }
        });
    });
</script>
