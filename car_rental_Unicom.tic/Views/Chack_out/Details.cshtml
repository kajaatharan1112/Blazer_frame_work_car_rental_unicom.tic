@model car_rental_Unicom.tic.Vew_modal.home_view_modal

@{
    ViewData["Title"] = "Booking Details";
}

<!-- Container -->
<div class="container py-5 fade-in">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Glass-card -->
            <div class="card shadow-lg border-0 rounded-4 booking-card">
                <div class="card-header bg-primary text-white rounded-top-4 text-center">
                    <h3 class="mb-0">Car & Booking Details</h3>
                </div>
                <div class="card-body p-4">
                    <!-- Car Images Gallery -->
                    <div class="mb-4">
                        <div class="row g-2">
                            @if (Model.ImagePaths != null && Model.ImagePaths.Any())
                            {
                                foreach (var img in Model.ImagePaths)
                                {
                                    if (!string.IsNullOrWhiteSpace(img))
                                    {
                                        <div class="col-6 col-md-4 col-lg-3">
                                            <img src="@img" class="img-fluid rounded shadow-sm border car-image" style="object-fit:cover; width:100%; height:120px;" alt="Car Image" />
                                        </div>
                                    }
                                }
                            }
                            else
                            {
                                <div class="col text-center text-muted">No images available</div>
                            }
                        </div>
                    </div>

                    <!-- Booking Form -->
                    <form id="checkoutForm" asp-action="Checkout" asp-controller="Chack_out" method="post" class="needs-validation" novalidate>
                        <input type="hidden" name="id" value="@Model.booking_id" />
                        <input type="hidden" name="car_id" value="@Model.car_id" />
                        <input type="hidden" name="user_id" value="@Model.user_id" />

                        <table class="table table-borderless align-middle mb-4">
                            <tbody>
                                <tr>
                                    <th class="text-end w-50">Car Name</th>
                                    <td>@Model.Car_modalName</td>
                                </tr>
                                <tr>
                                    <th class="text-end">Year</th>
                                    <td>@Model.year</td>
                                </tr>
                                <tr>
                                    <th class="text-end">Number Plate</th>
                                    <td>@Model.number_plact</td>
                                </tr>
                                <tr>
                                    <th class="text-end">AC</th>
                                    <td>@Model.ac</td>
                                </tr>
                                <tr>
                                    <th class="text-end">Top Speed</th>
                                    <td>@Model.top_speed</td>
                                </tr>
                                <tr>
                                    <th class="text-end">Gear System</th>
                                    <td>@Model.Gear_System</td>
                                </tr>
                                <tr>
                                    <th class="text-end">Mileage</th>
                                    <td>@Model.milage</td>
                                </tr>
                                <tr>
                                    <th class="text-end">Car Status</th>
                                    <td>@Model.car_status</td>
                                </tr>
                                <tr>
                                    <th class="text-end">Booking Name</th>
                                    <td>@Model.name</td>
                                </tr>
                                <tr>
                                    <th class="text-end">Start Date</th>
                                    <td>@Model.start_date</td>
                                </tr>
                                <tr>
                                    <th class="text-end">Days</th>
                                    <td>@Model.dayes</td>
                                </tr>
                                <tr>
                                    <th class="text-end">Status</th>
                                    <td>@Model.boking_status</td>
                                </tr>
                                <tr>
                                    <th class="text-end">Enter License Number</th>
                                    <td>
                                        <div class="input-icon-wrapper">
                                            <i class="bi bi-card-text icon"></i>
                                            <input type="number" class="form-control rounded-3" name="licence_number" id="licence_number" placeholder="License Number" required autocomplete="off" />
                                            <div class="invalid-feedback">License number is required.</div>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg shadow-sm">Checkout</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // 🚨 Shake animation on invalid submit
        const form = document.getElementById("checkoutForm");
        form.addEventListener("submit", function (event) {
            if (!form.checkValidity()) {
                event.preventDefault();
                form.classList.add("shake");
                setTimeout(() => form.classList.remove("shake"), 500);
            }
        });

        // Real-time validation for License Number
        const licenceInput = document.getElementById("licence_number");
        licenceInput.addEventListener("input", function () {
            if (this.value.trim() === "") {
                this.classList.add("is-invalid");
            } else {
                this.classList.remove("is-invalid");
                this.classList.add("is-valid");
            }
        });
    </script>
}

<style>
    /* Background */
    body {
        background: linear-gradient(135deg, #1e293b, #3b82f6);
        font-family: "Poppins", sans-serif;
        min-height: 100vh;
        padding: 20px;
    }

    /* Glass-card style */
    .booking-card {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(15px) saturate(180%);
        -webkit-backdrop-filter: blur(15px) saturate(180%);
        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.25);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.25);
        color: white;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    /* Car Images */
    .car-image {
        border-radius: 15px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .car-image:hover {
            transform: scale(1.1);
            box-shadow: 0 6px 20px rgba(59, 130, 246, 0.5);
        }

    /* Input focus glow */
    .form-control:focus {
        outline: none;
        box-shadow: 0 0 8px #1CB5E0;
        border-color: #1CB5E0;
    }

    /* Fade-in animation */
    .fade-in {
        animation: fadeInUp 0.8s ease-in-out;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Shake animation */
    .shake {
        animation: shakeAnim 0.5s;
    }

    @@keyframes shakeAnim {
        0% {
            transform: translateX(0);
        }

        25% {
            transform: translateX(-6px);
        }

        50% {
            transform: translateX(6px);
        }

        75% {
            transform: translateX(-6px);
        }

        100% {
            transform: translateX(0);
        }
    }

    /* Buttons */
    .btn-primary {
        background-color: #1CB5E0;
        border: none;
        border-radius: 12px;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #1595c1;
            transform: translateY(-2px);
        }

    /* Input icon wrapper */
    .input-icon-wrapper {
        position: relative;
    }

        .input-icon-wrapper .icon {
            position: absolute;
            left: 10px;
            top: 50%;
            transform: translateY(-50%);
            color: #1CB5E0;
            font-size: 1.1rem;
        }

        .input-icon-wrapper input {
            padding-left: 2.5rem;
        }
</style>
