@model car_rental_Unicom.tic.Vew_modal.Staff_vew_modal

@{
    ViewData["Title"] = "Edit Staff Profile";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Staff Profile - Car Rental</title>

    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Google Fonts: Poppins -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet" />

    <style>
        /* Body & Background */
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #1CB5E0, #000046);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 0;
        }

        /* Glass-card container */
        .form-container {
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border-radius: 15px;
            padding: 2rem;
            width: 100%;
            max-width: 500px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s, box-shadow 0.3s;
        }

            .form-container:hover {
                transform: translateY(-5px);
                box-shadow: 0 12px 40px rgba(0, 0, 0, 0.3);
            }

            /* Form title */
            .form-container h2 {
                color: #fff;
                text-align: center;
                margin-bottom: 1.5rem;
            }

        /* Input wrapper with icons */
        .input-icon-wrapper {
            position: relative;
            margin-bottom: 1rem;
        }

            .input-icon-wrapper i {
                position: absolute;
                left: 12px;
                top: 50%;
                transform: translateY(-50%);
                color: #1CB5E0;
            }

            .input-icon-wrapper input,
            .input-icon-wrapper select {
                padding-left: 2.5rem;
                border-radius: 10px;
                border: 1px solid #ccc;
                transition: 0.3s;
            }

                .input-icon-wrapper input:focus,
                .input-icon-wrapper select:focus {
                    box-shadow: 0 0 8px #1CB5E0;
                    border-color: #1CB5E0;
                }

        /* Shake animation for invalid input */
        .shake {
            animation: shake 0.3s;
            border-color: red !important;
        }
        @@keyframes shake {
            0%, 100%

        {
            transform: translateX(0);
        }

        25% {
            transform: translateX(-5px);
        }

        50% {
            transform: translateX(5px);
        }

        75% {
            transform: translateX(-5px);
        }

        }

        /* Buttons */
        .btn-primary {
            background-color: #1CB5E0;
            border: none;
            border-radius: 10px;
            width: 100%;
            padding: 0.5rem 1rem;
            transition: 0.3s;
        }

            .btn-primary:hover {
                background-color: #1594c3;
            }

        .btn-secondary {
            border-radius: 10px;
            width: 100%;
        }

        /* Validation messages */
        .text-danger {
            font-size: 0.9rem;
            margin-top: 0.25rem;
            display: block;
        }

        /* Password toggle */
        .show-password {
            display: flex;
            align-items: center;
            margin-top: 0.5rem;
            color: #fff;
        }

            .show-password input {
                margin-right: 0.5rem;
            }
    </style>
</head>
<body>
    <div class="form-container">
        <h2>Edit Staff Profile</h2>

        <form asp-action="Edit_profil" method="post" id="staffForm">
            <input type="hidden" asp-for="Id" />

            <!-- Name -->
            <div class="input-icon-wrapper">
                <i class="bi bi-person"></i>
                <input asp-for="Name" class="form-control" placeholder="Name" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Contact No -->
            <div class="input-icon-wrapper">
                <i class="bi bi-telephone"></i>
                <input asp-for="ContactNo" class="form-control" placeholder="Contact No" type="number" required min="1000000000" max="9999999999" />
                <span asp-validation-for="ContactNo" class="text-danger"></span>
            </div>

            <!-- Age -->
            <div class="input-icon-wrapper">
                <i class="bi bi-calendar"></i>
                <input asp-for="Age" class="form-control" placeholder="Age" type="number" required min="18" max="100" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>

            <!-- Gender -->
            <div class="input-icon-wrapper">
                <i class="bi bi-gender-ambiguous"></i>
                <input asp-for="Gender" class="form-control" placeholder="Gender" required />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <!-- Email -->
            <div class="input-icon-wrapper">
                <i class="bi bi-envelope"></i>
                <input asp-for="Email" class="form-control" placeholder="Email" type="email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Username -->
            <div class="input-icon-wrapper">
                <i class="bi bi-person-badge"></i>
                <input asp-for="UserName" id="username" name="UserName" class="form-control" placeholder="Username" autocomplete="off" required />
                <span id="usernameFeedback" class="form-text"></span>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <!-- New Password -->
            <div class="input-icon-wrapper">
                <i class="bi bi-lock"></i>
                <input type="password" name="NewPassword" id="NewPassword" class="form-control" placeholder="New Password" />
            </div>

            <!-- Confirm Password -->
            <div class="input-icon-wrapper">
                <i class="bi bi-lock-fill"></i>
                <input type="password" name="ConfirmPassword" id="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
            </div>

            <!-- Buttons -->
            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-primary flex-fill">Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary flex-fill">Cancel</a>
            </div>
        </form>
    </div>

    <script>
        // Real-time username uniqueness check
        document.getElementById("username").addEventListener("input", function () {
            const username = this.value;
            const feedback = document.getElementById("usernameFeedback");
            const currentId = document.querySelector('input[name="Id"]').value;

            if (username === '@Model.UserName') {
                feedback.textContent = "";
                return;
            }

            fetch(`/Staff/IsUserNameUnique?username=${encodeURIComponent(username)}`)
                .then(response => response.json())
                .then(isUnique => {
                    if (isUnique) {
                        feedback.textContent = "Username is available.";
                        feedback.style.color = "green";
                    } else {
                        feedback.textContent = "Username is already taken.";
                        feedback.style.color = "red";
                    }
                });
        });

        // Shake animation for empty required fields
        $(document).ready(function () {
            $("#staffForm input[required], #staffForm select[required]").on("input change", function () {
                if (!$(this).val()) {
                    $(this).addClass("shake");
                } else {
                    $(this).removeClass("shake");
                }
            });
        });
    </script>
</body>
</html>
