@model car_rental_Unicom.tic.Vew_modal.Staff_vew_modal

@{
    ViewData["Title"] = "My Profile";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Profile - Car Rental</title>

    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Google Fonts: Poppins -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet" />

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #1CB5E0, #000046);
            min-height: 100vh;
            margin: 0;
            padding: 2rem;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        /* Glass-card style */
        #profileCard {
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border-radius: 15px;
            padding: 2rem;
            box-shadow: 0 8px 30px rgba(0,0,0,0.2);
            transition: transform 0.3s, box-shadow 0.3s;
            width: 100%;
            max-width: 500px;
        }

            #profileCard:hover {
                transform: translateY(-5px);
                box-shadow: 0 12px 40px rgba(0,0,0,0.3);
            }

        h2 {
            color: #fff;
            text-align: center;
            margin-bottom: 1.5rem;
        }

        dl dt {
            color: #e0e0e0;
            font-weight: 500;
        }

        dl dd {
            color: #fff;
            margin-bottom: 0.75rem;
        }

        /* Buttons */
        .btn-warning, .btn-danger {
            border-radius: 10px;
            padding: 0.5rem 1rem;
            font-weight: 500;
            transition: 0.3s;
        }

        .btn-warning {
            background-color: #f0ad4e;
            border: none;
        }

            .btn-warning:hover {
                background-color: #d9983c;
            }

        .btn-danger {
            background-color: #d9534f;
            border: none;
        }

            .btn-danger:hover {
                background-color: #c12e2a;
            }

        /* Shake animation for potential validation errors */
        .shake {
            animation: shake 0.3s;
            border-color: red !important;
        }
        @@keyframes shake {
            0%, 100%

        {
            transform: translateX(0);
        }

        25% {
            transform: translateX(-5px);
        }

        50% {
            transform: translateX(5px);
        }

        75% {
            transform: translateX(-5px);
        }

        }
    </style>
</head>
<body>
    <div id="profileCard">
        <h2>My Profile</h2>

        <!-- Profile details in description list -->
        <dl class="row">
            <dt class="col-sm-4">Name</dt>
            <dd class="col-sm-8">@Model.Name</dd>

            <dt class="col-sm-4">Contact No</dt>
            <dd class="col-sm-8">@Model.ContactNo</dd>

            <dt class="col-sm-4">Age</dt>
            <dd class="col-sm-8">@Model.Age</dd>

            <dt class="col-sm-4">Gender</dt>
            <dd class="col-sm-8">@Model.Gender</dd>

            <dt class="col-sm-4">Email</dt>
            <dd class="col-sm-8">@Model.Email</dd>

            <dt class="col-sm-4">Username</dt>
            <dd class="col-sm-8">@Model.UserName</dd>
        </dl>

        <!-- Action buttons -->
        <div class="mt-3 d-flex justify-content-between">
            <a asp-action="Edit_profil" asp-route-id="@Model.Id" class="btn btn-warning"><i class="bi bi-pencil-square"></i> Edit</a>
            <button type="button" class="btn btn-danger" id="deleteBtn"><i class="bi bi-trash"></i> Delete</button>
            <form id="deleteForm" asp-action="Delete_profil" method="post" style="display:none;">
                <input type="hidden" name="id" value="@Model.Id" />
            </form>
        </div>
    </div>

    <script>
        // Delete confirmation and form submit
        document.getElementById('deleteBtn').addEventListener('click', function () {
            if (confirm('Are you sure you want to delete your profile? This action cannot be undone.')) {
                document.getElementById('deleteForm').submit();
            }
        });
    </script>
</body>
</html>
