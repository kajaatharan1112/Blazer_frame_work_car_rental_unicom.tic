@model car_rental_Unicom.tic.Vew_modal.Staff_vew_modal

@{
    ViewData["Title"] = "My Profile";
}

<h2>My Profile</h2>

<div id="profileCard" class="card shadow" style="max-width: 500px;">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4">Name</dt>
            <dd class="col-sm-8">@Model.Name</dd>

            <dt class="col-sm-4">Contact No</dt>
            <dd class="col-sm-8">@Model.ContactNo</dd>

            <dt class="col-sm-4">Age</dt>
            <dd class="col-sm-8">@Model.Age</dd>

            <dt class="col-sm-4">Gender</dt>
            <dd class="col-sm-8">@Model.Gender</dd>

            <dt class="col-sm-4">Email</dt>
            <dd class="col-sm-8">@Model.Email</dd>

            <dt class="col-sm-4">Username</dt>
            <dd class="col-sm-8">@Model.UserName</dd>
        </dl>
        <div class="mt-3">
            <a asp-action="Edit_profil" asp-route-id="@Model.Id" class="btn btn-warning" id="editBtn">Edit</a>
            <button type="button" class="btn btn-danger" id="deleteBtn">Delete</button>
            <form id="deleteForm" asp-action="Delete_profil" method="post" style="display:none;">
                <input type="hidden" name="id" value="@Model.Id" />
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Delete confirmation and form submit
        document.getElementById('deleteBtn').addEventListener('click', function () {
            if (confirm('Are you sure you want to delete your profile? This action cannot be undone.')) {
                document.getElementById('deleteForm').submit();
            }
        });
    </script>
}