@model IEnumerable<car_rental_Unicom.tic.Vew_modal.Staff_vew_modal>

@{
    ViewData["Title"] = "Staff Management";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Staff Management - Car Rental</title>

    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Google Fonts: Poppins -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet" />

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #1CB5E0, #000046);
            min-height: 100vh;
            margin: 0;
            padding: 2rem;
        }

        /* Glass-card wrapper for table */
        .card-wrapper {
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border-radius: 15px;
            padding: 2rem;
            box-shadow: 0 8px 30px rgba(0,0,0,0.2);
            transition: transform 0.3s, box-shadow 0.3s;
        }

            .card-wrapper:hover {
                transform: translateY(-5px);
                box-shadow: 0 12px 40px rgba(0,0,0,0.3);
            }

        h1 {
            color: #fff;
            text-align: center;
            margin-bottom: 1.5rem;
        }

        /* Buttons */
        .btn-primary {
            background-color: #1CB5E0;
            border: none;
            border-radius: 10px;
            transition: 0.3s;
        }

            .btn-primary:hover {
                background-color: #1594c3;
            }

        .btn-warning {
            border-radius: 10px;
        }

        .btn-danger {
            border-radius: 10px;
        }

        /* Table styling */
        .table {
            background: rgba(255,255,255,0.1);
            color: #fff;
            border-radius: 10px;
            overflow: hidden;
        }

            .table th, .table td {
                vertical-align: middle;
            }

            .table thead {
                background-color: rgba(255,255,255,0.2);
            }

            .table tbody tr:hover {
                background-color: rgba(255,255,255,0.1);
            }

        /* Responsive table */
        .table-responsive {
            overflow-x: auto;
        }

        /* Validation/Feedback */
        .text-danger {
            font-size: 0.9rem;
        }

        /* Shake animation */
        .shake {
            animation: shake 0.3s;
            border-color: red !important;
        }
        @@keyframes shake {
            0%, 100%

        {
            transform: translateX(0);
        }

        25% {
            transform: translateX(-5px);
        }

        50% {
            transform: translateX(5px);
        }

        75% {
            transform: translateX(-5px);
        }

        }
    </style>
</head>
<body>
    <div class="card-wrapper">
        <h1>Staff Management</h1>

        <!-- Add Staff Button -->
        <div class="mb-3 text-end">
            <a asp-action="Add" class="btn btn-primary"><i class="bi bi-person-plus"></i> Add Staff</a>
        </div>

        <!-- Staff Table -->
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Contact No</th>
                        <th>Age</th>
                        <th>Gender</th>
                        <th>Email</th>
                        <th>Username</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var staff in Model)
                    {
                        <tr>
                            <td>@staff.Name</td>
                            <td>@staff.ContactNo</td>
                            <td>@staff.Age</td>
                            <td>@staff.Gender</td>
                            <td>@staff.Email</td>
                            <td>@staff.UserName</td>
                            <td>
                                <!-- Edit Button -->
                                <a asp-action="Edit" asp-route-id="@staff.Id" class="btn btn-warning btn-sm"><i class="bi bi-pencil-square"></i></a>

                                <!-- Delete Button -->
                                <form asp-action="Delete" asp-route-id="@staff.Id" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i></button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script>
        // Username uniqueness check (example for inline usage)
        function checkUsername() {
            const usernameInput = document.getElementById("username");
            const feedback = document.getElementById("usernameFeedback");

            if (!usernameInput) return;

            usernameInput.addEventListener("input", function () {
                const username = usernameInput.value;
                fetch(`/Staff/IsUserNameUnique?username=${encodeURIComponent(username)}`)
                    .then(response => response.json())
                    .then(isUnique => {
                        if (isUnique) {
                            feedback.textContent = "Username is available.";
                            feedback.style.color = "green";
                        } else {
                            feedback.textContent = "Username is already taken.";
                            feedback.style.color = "red";
                        }
                    });
            });
        }

        document.addEventListener("DOMContentLoaded", checkUsername);
    </script>
</body>
</html>
