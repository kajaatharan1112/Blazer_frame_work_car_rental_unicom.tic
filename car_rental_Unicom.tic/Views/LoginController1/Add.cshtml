@model car_rental_Unicom.tic.Vew_modal.Customers_vew_modal

@{
    Layout = null;
    ViewData["Title"] = "Add Customer";
}

<!-- Bootstrap, jQuery, Icons, Fonts -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(to right, #0f2027, #203a43, #2c5364);
        min-height: 100vh;
        color: #fff;
    }

    /* Glass-card container */
    .glass-card {
        background: rgba(255,255,255,0.05);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        border: 1px solid rgba(255,255,255,0.2);
        padding: 25px;
        box-shadow: 0 8px 25px rgba(0,0,0,0.3);
        transition: transform 0.3s ease;
    }

        .glass-card:hover {
            transform: translateY(-5px);
        }

    /* Input-icon wrapper */
    .input-icon-wrapper {
        position: relative;
        display: flex;
        align-items: center;
        margin-bottom: 15px;
    }

        .input-icon-wrapper i {
            position: absolute;
            left: 12px;
            color: #1CB5E0;
            font-size: 1.2rem;
        }

        .input-icon-wrapper input,
        .input-icon-wrapper select {
            width: 100%;
            padding-left: 40px;
            height: 45px;
            border-radius: 12px;
            border: 1px solid rgba(255,255,255,0.3);
            background: rgba(255,255,255,0.05);
            color: #fff;
            transition: box-shadow 0.3s, border 0.3s;
        }

            .input-icon-wrapper input::placeholder {
                color: #bbb;
            }

            .input-icon-wrapper input:focus,
            .input-icon-wrapper select:focus {
                box-shadow: 0 0 10px #1CB5E0;
                border-color: #1CB5E0;
                outline: none;
            }

    /* Labels & buttons */
    .form-label {
        font-weight: 500;
        color: #fff;
    }

    .btn-primary {
        background-color: #1CB5E0;
        border-color: #1CB5E0;
        border-radius: 50px;
        font-weight: 500;
    }

        .btn-primary:hover {
            background-color: #0a98c8;
        }

    .btn-success {
        border-radius: 50px;
        font-weight: 500;
    }

    .btn-secondary {
        border-radius: 50px;
    }

    .text-danger {
        font-size: 0.85rem;
    }

    /* Shake animation */
    .shake {
        animation: shake 0.4s;
    }
    @@keyframes shake {
        0%,100%

    {
        transform: translateX(0px);
    }

    25% {
        transform: translateX(-5px);
    }

    50% {
        transform: translateX(5px);
    }

    75% {
        transform: translateX(-5px);
    }

    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="glass-card">
                <h3 class="mb-4 text-center">Add New Customer</h3>

                <form asp-action="Add" method="post" autocomplete="off" id="customerForm">
                    <div class="row">
                        <div class="col-md-6">
                            <label asp-for="Name" class="form-label">Name</label>
                            <div class="input-icon-wrapper">
                                <i class="bi bi-person"></i>
                                <input asp-for="Name" class="form-control" placeholder="Full Name" required />
                            </div>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="contactNo" class="form-label">Contact No</label>
                            <div class="input-icon-wrapper">
                                <i class="bi bi-telephone"></i>
                                <input asp-for="contactNo" class="form-control" placeholder="0123456789" required pattern="^[0-9]{10}$" />
                            </div>
                            <span asp-validation-for="contactNo" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <label asp-for="Age" class="form-label">Age</label>
                            <div class="input-icon-wrapper">
                                <i class="bi bi-calendar"></i>
                                <input asp-for="Age" class="form-control" placeholder="18" required min="18" id="Age" />
                            </div>
                            <span asp-validation-for="Age" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Gender" class="form-label">Gender</label>
                            <div class="input-icon-wrapper">
                                <i class="bi bi-gender-ambiguous"></i>
                                <select asp-for="Gender" class="form-select" required>
                                    <option value="">Select Gender</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Email" class="form-label">Email</label>
                            <div class="input-icon-wrapper">
                                <i class="bi bi-envelope"></i>
                                <input asp-for="Email" class="form-control" placeholder="example@email.com" required id="EmailField" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <label asp-for="UserName" class="form-label">Username</label>
                            <div class="input-icon-wrapper">
                                <i class="bi bi-person-badge"></i>
                                <input asp-for="UserName" class="form-control" placeholder="Username" id="UserName" required autocomplete="off" />
                            </div>
                            <span asp-validation-for="UserName" class="text-danger"></span>
                            <span id="usernameStatus" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="password" class="form-label">Password</label>
                            <div class="input-icon-wrapper">
                                <i class="bi bi-lock"></i>
                                <input asp-for="password" class="form-control" placeholder="Password" required type="password" id="passwordField" />
                                <button type="button" class="btn btn-outline-light btn-sm" id="togglePassword" style="position:absolute; right:10px; top:50%; transform:translateY(-50%);">
                                    <span id="togglePasswordIcon" class="bi bi-eye"></span>
                                </button>
                            </div>
                            <span asp-validation-for="password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-3">
                        <button type="submit" class="btn btn-success" id="submitBtn">Add Customer</button>
                        <a asp-action="Login" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Shake animation helper
        function shakeField(field) {
            $(field).addClass('shake');
            setTimeout(function(){ $(field).removeClass('shake'); }, 400);
        }

        // Username uniqueness check
        $(document).on('input', '#UserName', function () {
            var username = $(this).val();
            if (username.length > 2) {
                $.get('/Customers/IsUserNameUnique', { username: username }, function (isUnique) {
                    if (!isUnique) {
                        $('#usernameStatus').text('This username is already taken.');
                        shakeField('#UserName');
                        $('#submitBtn').prop('disabled', true);
                    } else {
                        $('#usernameStatus').text('');
                        $('#submitBtn').prop('disabled', false);
                    }
                });
            } else {
                $('#usernameStatus').text('');
                $('#submitBtn').prop('disabled', false);
            }
        });

        // Password toggle
        $('#togglePassword').on('click', function () {
            var passField = $('#passwordField');
            var icon = $('#togglePasswordIcon');
            if (passField.attr('type') === 'password') {
                passField.attr('type', 'text');
                icon.removeClass('bi-eye').addClass('bi-eye-slash');
            } else {
                passField.attr('type', 'password');
                icon.removeClass('bi-eye-slash').addClass('bi-eye');
            }
        });

        // Client-side age validation
        $('#customerForm').on('submit', function (e) {
            var age = parseInt($('#Age').val(), 10);
            if (isNaN(age) || age < 18) {
                shakeField('#Age');
                e.preventDefault();
                return false;
            }
        });
    </script>
}
