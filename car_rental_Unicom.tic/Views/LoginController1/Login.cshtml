@model car_rental_Unicom.tic.View_modal.login_vew_modal
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Car Rental - Login</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background: #f0f0f0;
        }

        .login-box {
            background-color: #fff;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.3);
            width: 300px;
            text-align: center;
        }

            .login-box h1 {
                margin-bottom: 1rem;
            }

            .login-box input {
                width: 100%;
                padding: 0.5rem;
                margin: 0.5rem 0;
                border-radius: 5px;
                border: 1px solid #ccc;
            }

            .login-box button {
                padding: 0.5rem 1rem;
                margin: 0.5rem 0.2rem;
                border: none;
                border-radius: 5px;
                cursor: pointer;
            }

        .btn-login {
            background-color: #007bff;
            color: #fff;
        }

        .btn-signup {
            background-color: #28a745;
            color: #fff;
        }

        .show-pass {
            display: flex;
            align-items: center;
            margin-bottom: 1rem;
            font-size: 0.9rem;
        }

        .text-danger {
            color: red;
            margin-bottom: 1rem;
            display: block;
        }
    </style>
</head>
<body>
    <div class="login-box">
        <h1>Car Rental</h1>

        @if (ViewBag.Error != null)
        {
            <span class="text-danger">@ViewBag.Error</span>
        }

        <form method="post" asp-controller="LoginController1" asp-action="Login">
            <input asp-for="username" placeholder="Username" required />
            <input asp-for="password" id="password" placeholder="Password" required />

            <div class="show-pass">
                <input type="checkbox" id="showPassword" onclick="togglePassword()" />
                <label for="showPassword" style="margin-left:5px;">Show Password</label>
            </div>

            <div>
                <button type="submit" class="btn btn-login">Login</button>
                <a href="/Account/Register" class="btn btn-signup">Sign Up</a>
            </div>
        </form>
    </div>

    <script>
        function togglePassword() {
            var pwd = document.getElementById("password");
            pwd.type = (pwd.type === "password") ? "text" : "password";
        }
    </script>
</body>
</html>
