@{
    Layout = null; // 🚫 இந்த page-க்கு MVC Layout பயன்படுத்த வேண்டாம்
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Car Rental - Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        /* 🌅 பின் பக்கம்: Random Sports Car wallpaper + gradient overlay */
        body {
            background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('https://source.unsplash.com/1600x900/?sports-car') no-repeat center center fixed;
            background-size: cover;
            height: 100vh;
            /* 🎯 Login box-ஐ மையத்தில் வைத்து display */
            display: flex;
            justify-content: center;
            align-items: center;
            color: white; /* ✏️ எழுத்து நிறம் */
            text-shadow: 1px 1px 4px #000; /* 🕶️ readability-க்கு shadow */
        }

        /* 📦 Login box-ன் design */
        .login-box {
            background-color: rgba(0,0,0,0.7); /* 🔒 semi-transparent background */
            padding: 3rem;
            border-radius: 15px;
            text-align: center;
            width: 360px; /* 📐 fixed width for better layout */
            box-shadow: 0 0 20px rgba(0,0,0,0.8); /* 🌟 subtle shadow */
        }

            /* 🏷️ Headline-ன் design */
            .login-box h1 {
                margin-bottom: 2rem;
                font-size: 3rem;
            }

            /* 📝 Form input spacing */
            .login-box .form-control {
                margin-bottom: 1rem;
            }

            /* 🔘 Buttons spacing */
            .login-box .btn {
                width: 120px;
                margin: 0.5rem;
            }

        /* ✅ Show password checkbox styling */
        .show-pass {
            color: #fff;
            text-align: left;
            margin-bottom: 1rem;
        }
    </style>
</head>
<body>
    <!-- 📦 Login Box -->
    <div class="login-box">
        <!-- 🏷️ Headline -->
        <h1>Car Rental</h1>
        <p>Welcome! Please login or sign up to continue.</p>

        <!-- 📝 Login Form -->
        <form method="post" action="/Account/Login">
            @* 👤 Username input field *@
            <input type="text" name="Username" class="form-control" placeholder="Username" required />

            @* 🔑 Password input field *@
            <input type="password" name="Password" id="password" class="form-control" placeholder="Password" required />

            @* 👁️ Show/Hide password checkbox *@
            <div class="form-check show-pass">
                <input type="checkbox" class="form-check-input" id="showPassword" onclick="togglePassword()" />
                <label class="form-check-label" for="showPassword">Show Password</label>
            </div>

            <!-- 🔵 Login Button -->
            @* <button type="submit" class="btn btn-primary btn-lg">Login</button> *@
            <!-- 🔵 Login Button -->
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg">Login</a>


            <!-- 🟢 Sign Up Button -->
            <a href="/Account/Register" class="btn btn-success btn-lg">Sign Up</a>
        </form>
    </div>

    @* 📦 Bootstrap JS *@
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @* 👁️ Show/Hide password function *@
    <script>
        function togglePassword() {
            var pwd = document.getElementById("password"); // 🔑 Get the password input box
            if (pwd.type === "password") {
                pwd.type = "text"; // 👁️ Show password
            } else {
                pwd.type = "password"; // 🙈 Hide password
            }
        }
    </script>
</body>
</html>
