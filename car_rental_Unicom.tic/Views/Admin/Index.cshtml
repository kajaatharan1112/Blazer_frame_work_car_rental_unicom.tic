@model List<car_rental_Unicom.tic.Vew_modal.admin_view_modal>
@{
    ViewData["Title"] = "Admin List";
}

<!-- Bootstrap & Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- Custom Styles -->
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(135deg, #e0f7fa, #ffffff);
    }

    .admin-card {
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border-radius: 15px;
        padding: 20px;
        margin: 15px;
        box-shadow: 0 8px 32px rgba(0,0,0,0.1);
        transition: transform 0.3s, box-shadow 0.3s;
        text-align: center;
        width: 250px;
    }

        .admin-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 40px rgba(0,0,0,0.2);
        }

    .admin-icon {
        font-size: 40px;
        color: #1CB5E0;
        margin-bottom: 10px;
    }

    .admin-name {
        font-weight: 600;
        margin-bottom: 5px;
    }

    .admin-info {
        font-size: 14px;
        color: #333;
        margin-bottom: 5px;
    }

    .btn-custom {
        background-color: #1CB5E0;
        color: white;
        border-radius: 10px;
        transition: background-color 0.3s;
        margin: 2px;
    }

        .btn-custom:hover {
            background-color: #1598c5;
            color: white;
        }

    .cards-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
    }
</style>

<div class="container mt-4">
    <h2 class="mb-4 text-center">Admin Profiles</h2>

    <div class="cards-container">
        @foreach (var admin in Model)
        {
            <div class="admin-card">
                <div class="admin-icon"><i class="fa fa-user-circle"></i></div>
                <div class="admin-name">@admin.Name</div>
                <div class="admin-info"><i class="fa fa-phone"></i> @admin.ContactNo</div>
                <div class="admin-info"><i class="fa fa-envelope"></i> @admin.Email</div>
                <div class="admin-info"><i class="fa fa-venus-mars"></i> @admin.Gender, @admin.Age yrs</div>
                <div class="admin-info"><i class="fa fa-user-tag"></i> @admin.Role</div>
                <div class="admin-info"><i class="fa fa-user"></i> @admin.UserName</div>

                <button class="btn btn-custom btn-sm" data-bs-toggle="modal" data-bs-target="#editModal-@admin.Id">
                    <i class="fa fa-pen"></i> Edit
                </button>
                <button class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#changePwdModal-@admin.Id">
                    <i class="fa fa-key"></i> Change Password
                </button>
            </div>

            <!-- Edit Modal -->
            <div class="modal fade" id="editModal-@admin.Id" tabindex="-1" aria-labelledby="editModalLabel-@admin.Id" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <form asp-action="Edit" method="post">
                            <div class="modal-header">
                                <h5 class="modal-title" id="editModalLabel-@admin.Id">Edit Admin</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <input type="hidden" name="Id" value="@admin.Id" />
                                <div class="mb-3 input-icon-wrapper">
                                    <i class="fa fa-user"></i>
                                    <input type="text" name="Name" class="form-control" value="@admin.Name" required />
                                </div>
                                <div class="mb-3 input-icon-wrapper">
                                    <i class="fa fa-phone"></i>
                                    <input type="text" name="ContactNo" class="form-control" value="@admin.ContactNo" required pattern="\d{10}" title="Enter 10 digit number" />
                                </div>
                                <div class="mb-3 input-icon-wrapper">
                                    <i class="fa fa-calendar"></i>
                                    <input type="number" name="Age" class="form-control" value="@admin.Age" required min="18" max="100" />
                                </div>
                                <div class="mb-3 input-icon-wrapper">
                                    <i class="fa fa-venus-mars"></i>
                                    <input type="text" name="Gender" class="form-control" value="@admin.Gender" required />
                                </div>
                                <div class="mb-3 input-icon-wrapper">
                                    <i class="fa fa-envelope"></i>
                                    <input type="email" name="Email" class="form-control" value="@admin.Email" required />
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-success btn-custom">Save</button>
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- Change Password Modal -->
            <div class="modal fade" id="changePwdModal-@admin.Id" tabindex="-1" aria-labelledby="changePwdModalLabel-@admin.Id" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <form asp-action="ChangePassword" method="post">
                            <div class="modal-header">
                                <h5 class="modal-title" id="changePwdModalLabel-@admin.Id">Change Password</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <input type="hidden" name="Id" value="@admin.Id" />

                                <!-- UserName -->
                                <div class="mb-3 input-icon-wrapper">
                                    <label class="form-label"><i class="fa fa-user"></i> User Name</label>
                                    <input type="text" name="UserName" class="form-control" value="@admin.UserName" required />
                                </div>

                                <!-- Current Password -->
                                <div class="mb-3 input-icon-wrapper">
                                    <label class="form-label"><i class="fa fa-lock"></i> Current Password</label>
                                    <input type="password" name="CurrentPassword" class="form-control" />
                                </div>

                                <!-- New Password -->
                                <div class="mb-3 input-icon-wrapper">
                                    <label class="form-label"><i class="fa fa-lock"></i> New Password</label>
                                    <input type="password" name="NewPassword" class="form-control" required id="newPwd-@admin.Id" />
                                    <i class="fa fa-eye toggle-password" data-target="#newPwd-@admin.Id" style="position:absolute; right:12px; top:38px; cursor:pointer;"></i>
                                </div>

                                <!-- Confirm Password -->
                                <div class="mb-3 input-icon-wrapper">
                                    <label class="form-label"><i class="fa fa-lock"></i> Confirm Password</label>
                                    <input type="password" name="ConfirmPassword" class="form-control" required id="confirmPwd-@admin.Id" />
                                    <i class="fa fa-eye toggle-password" data-target="#confirmPwd-@admin.Id" style="position:absolute; right:12px; top:38px; cursor:pointer;"></i>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-success btn-custom">Change</button>
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        }
    </div>
</div>

<!-- Password Toggle Script -->
<script>
    $(document).on('click', '.toggle-password', function() {
        var input = $($(this).data('target'));
        var type = input.attr('type') === 'password' ? 'text' : 'password';
        input.attr('type', type);
        $(this).toggleClass('fa-eye fa-eye-slash');
    });
</script>
