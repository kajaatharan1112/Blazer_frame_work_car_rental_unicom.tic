@model List<car_rental_Unicom.tic.View_modal.car_add_view_modal>

@{
    ViewData["Title"] = "Car Page";
}

<div class="container mt-4">
    <h2 class="mb-4">Car Page</h2>

    <!-- Buttons -->
    <div class="mb-3">
        <a asp-action="add_car" class="btn btn-primary me-2">Add Car</a>
        <button type="button" class="btn btn-warning" id="showNonAvailableBtn">Non Available</button>
    </div>

    <!-- Available Cars -->
    <div class="row g-4">
        @if (Model != null && Model.Any())
        {
            var availableCars = Model.Where(c => c.car_status?.ToLower() == "available").ToList();
            if (availableCars.Any())
            {
                foreach (var car in availableCars)
                {
                    var imageUrl = (car.ImagePaths != null && car.ImagePaths.Any())
                    ? car.ImagePaths.First()
                    : "https://placehold.co/600x400/808080/fff?text=No+Image";
                    <div class="col-sm-6 col-md-4 col-lg-3">
                        <div class="card h-100 shadow-sm">
                            <img src="@imageUrl" class="card-img-top" alt="@car.Car_modalName">
                            <div class="card-body">
                                <h5 class="card-title">@car.Car_modalName</h5>
                                <p class="mb-1"><strong>Year:</strong> @car.year</p>
                                <span class="badge bg-success">@car.car_status</span>
                            </div>
                            <div class="card-footer">
                                <button type="button" class="btn btn-primary w-100 btn-sm" onclick="showCarDetails('@car.CarId')">
                                    View
                                </button>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>No available cars.</p>
            }
        }
        else
        {
            <p>No cars found.</p>
        }
    </div>
</div>

<!-- Car Details Modal -->
<div class="modal fade" id="carDetailsModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="carDetailsModalLabel"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <img id="carImage" class="img-fluid mb-3 rounded" alt="Car Image">
                <ul class="list-group" id="carDetailsList"></ul>
            </div>
            <div class="modal-footer" id="carModalFooter">
                <form asp-action="EditCar" asp-controller="Car" method="post" class="d-inline">
                    <input type="hidden" name="CarId" id="editCarId" />
                    <button type="submit" class="btn btn-warning btn-sm">Edit</button>
                </form>

                <form asp-action="DeleteCar" asp-controller="Car" method="post" class="d-inline">
                    <input type="hidden" name="CarId" id="deleteCarId" />
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Non Available Cars Modal -->
<div class="modal fade" id="nonAvailableModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Non Available Cars</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body row g-3" id="nonAvailableCarsContainer"></div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const carsData = @Html.Raw(Json.Serialize(Model));

        function showCarDetails(carId) {
            const car = carsData.find(c => c.carId === carId);
            if (!car) return;

            document.getElementById("carDetailsModalLabel").innerText = car.car_modalName;
            document.getElementById("carImage").src = (car.imagePaths?.[0]) || "https://placehold.co/600x400?text=No+Image";

            const detailsList = document.getElementById("carDetailsList");
            detailsList.innerHTML = `
                        <li class="list-group-item"><strong>Year:</strong> ${car.year}</li>
                        <li class="list-group-item"><strong>Number Plate:</strong> ${car.number_plact}</li>
                        <li class="list-group-item"><strong>A/C:</strong> ${car.ac}</li>
                        <li class="list-group-item"><strong>Gear System:</strong> ${car.gear_System}</li>
                        <li class="list-group-item"><strong>Mileage:</strong> ${car.milage}</li>
                        <li class="list-group-item"><strong>Top Speed:</strong> ${car.top_speed}</li>
                        <li class="list-group-item"><strong>Maintenance Charge:</strong> ${car.maintenanceCharge}</li>
                        <li class="list-group-item"><strong>Rent/Day:</strong> ${car.rentPerDay}</li>
                        <li class="list-group-item"><strong>Status:</strong> ${car.car_status}</li>
                    `;

            // ✅ fill hidden inputs for forms
            document.getElementById("editCarId").value = car.carId;
            document.getElementById("deleteCarId").value = car.carId;

            new bootstrap.Modal(document.getElementById("carDetailsModal")).show();
        }

        document.getElementById("showNonAvailableBtn").addEventListener("click", () => {
            const nonAvailable = carsData.filter(c => c.car_status?.toLowerCase() !== "available");
            const container = document.getElementById("nonAvailableCarsContainer");
            container.innerHTML = nonAvailable.length
                ? nonAvailable.map(car => `
                            <div class="col-sm-6 col-md-4">
                                <div class="card h-100">
                                    <img src="${car.imagePaths?.[0] || 'https://placehold.co/600x400?text=No+Image'}" class="card-img-top">
                                    <div class="card-body">
                                        <h6 class="card-title">${car.car_modalName}</h6>
                                        <span class="badge bg-danger">${car.car_status}</span>
                                    </div>
                                    <div class="card-footer">
                                        <button class="btn btn-primary btn-sm w-100" onclick="showCarDetails('${car.carId}')">View</button>
                                    </div>
                                </div>
                            </div>
                        `).join("")
                : "<p>No non-available cars.</p>";

            new bootstrap.Modal(document.getElementById("nonAvailableModal")).show();
        });
    </script>
}
