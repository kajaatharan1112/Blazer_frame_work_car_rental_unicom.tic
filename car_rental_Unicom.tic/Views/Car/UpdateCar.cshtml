@model car_rental_Unicom.tic.View_modal.car_add_view_modal

@{
    ViewData["Title"] = "Edit Car";
}

<!-- Container -->
<div class="container mt-4 fade-in">
    <h2 class="mb-4 text-white">✏️ Edit Car Details</h2>

    <!-- Validation Summary -->
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <!-- Edit Car Form -->
    <form asp-action="UpdateCar" method="post" enctype="multipart/form-data"
          class="shadow p-4 rounded car-card needs-validation" novalidate>

        <!-- Hidden CarId -->
        <input type="hidden" asp-for="CarId" />

        <div class="row g-3">
            <!-- Model Name -->
            <div class="col-md-6">
                <label asp-for="Car_modalName" class="form-label text-white">Model Name</label>
                <input asp-for="Car_modalName" class="form-control rounded-3" placeholder="Model Name" required />
                <span asp-validation-for="Car_modalName" class="text-danger"></span>
            </div>

            <!-- Year -->
            <div class="col-md-6">
                <label asp-for="year" class="form-label text-white">Year</label>
                <input asp-for="year" type="number" min="1900" max="2100"
                       class="form-control rounded-3" placeholder="Year" required />
                <span asp-validation-for="year" class="text-danger"></span>
            </div>

            <!-- Number Plate -->
            <div class="col-md-6">
                <label asp-for="number_plact" class="form-label text-white">Number Plate</label>
                <input asp-for="number_plact" class="form-control rounded-3" placeholder="Number Plate" required />
                <span asp-validation-for="number_plact" class="text-danger"></span>
            </div>

            <!-- AC -->
            <div class="col-md-6">
                <label asp-for="ac" class="form-label text-white">AC</label>
                <input asp-for="ac" class="form-control rounded-3" placeholder="AC" required />
                <span asp-validation-for="ac" class="text-danger"></span>
            </div>

            <!-- Top Speed -->
            <div class="col-md-6">
                <label asp-for="top_speed" class="form-label text-white">Top Speed</label>
                <input asp-for="top_speed" type="number" class="form-control rounded-3" placeholder="Top Speed" required />
                <span asp-validation-for="top_speed" class="text-danger"></span>
            </div>

            <!-- Gear System -->
            <div class="col-md-6">
                <label asp-for="Gear_System" class="form-label text-white">Gear System</label>
                <input asp-for="Gear_System" class="form-control rounded-3" placeholder="Gear System" required />
                <span asp-validation-for="Gear_System" class="text-danger"></span>
            </div>

            <!-- Mileage -->
            <div class="col-md-6">
                <label asp-for="milage" class="form-label text-white">Mileage</label>
                <input asp-for="milage" type="number" class="form-control rounded-3" placeholder="Mileage" required />
                <span asp-validation-for="milage" class="text-danger"></span>
            </div>

            <!-- Status -->
            <div class="col-md-6">
                <label asp-for="car_status" class="form-label text-white">Status</label>
                <select asp-for="car_status" class="form-select rounded-3" required>
                    <option value="">Select Status</option>
                    <option value="available">Available</option>
                    <option value="unavailable">Unavailable</option>
                    <option value="maintenance">Maintenance</option>
                </select>
                <span asp-validation-for="car_status" class="text-danger"></span>
            </div>

            <!-- Maintenance Charge -->
            <div class="col-md-6">
                <label asp-for="MaintenanceCharge" class="form-label text-white">Maintenance Charge</label>
                <input asp-for="MaintenanceCharge" type="number" class="form-control rounded-3" placeholder="Maintenance Charge" required />
                <span asp-validation-for="MaintenanceCharge" class="text-danger"></span>
            </div>

            <!-- Rent Per Day -->
            <div class="col-md-6">
                <label asp-for="RentPerDay" class="form-label text-white">Rent Per Day</label>
                <input asp-for="RentPerDay" type="number" class="form-control rounded-3" placeholder="Rent Per Day" required />
                <span asp-validation-for="RentPerDay" class="text-danger"></span>
            </div>

            <!-- Current Images -->
            <div class="col-12">
                <label class="form-label text-white">Current Images</label>
                <div class="d-flex flex-wrap gap-2">
                    @foreach (var path in Model.ImagePaths)
                    {
                        <img src="@path" alt="Car Image"
                             class="car-image border"
                             style="height:100px;width:100px;object-fit:cover;" />
                    }
                </div>
            </div>

            <!-- Upload New Images -->
            <div class="col-12">
                <label asp-for="ImageFiles" class="form-label text-white">Upload New Images</label>
                <input asp-for="ImageFiles" type="file" multiple class="form-control rounded-3" />
                <span asp-validation-for="ImageFiles" class="text-danger"></span>
            </div>
        </div>

        <!-- Form Buttons -->
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Update Car</button>
            <a asp-action="Car" asp-controller="Car" class="btn btn-secondary ms-2">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // 🚨 Shake effect on invalid submit
        document.querySelector("form").addEventListener("submit", function (event) {
            if (!this.checkValidity()) {
                event.preventDefault();
                this.classList.add("shake");
                setTimeout(() => this.classList.remove("shake"), 500);
            }
        });
    </script>
}

<style>
    /* Background */
    body {
        background: linear-gradient(135deg, #1e293b, #3b82f6);
        min-height: 100vh;
        font-family: "Poppins", sans-serif;
        padding: 20px;
    }

    /* Glass-card style */
    .car-card {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(15px) saturate(180%);
        -webkit-backdrop-filter: blur(15px) saturate(180%);
        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.25);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.25);
        color: white;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    /* Input / Select */
    .form-control:focus, .form-select:focus {
        outline: none;
        box-shadow: 0 0 8px #1CB5E0;
        border-color: #1CB5E0;
    }

    /* Car Image Hover */
    .car-image {
        border-radius: 15px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .car-image:hover {
            transform: scale(1.1);
            box-shadow: 0 6px 20px rgba(59, 130, 246, 0.5);
        }

    /* Fade-in animation */
    .fade-in {
        animation: fadeInUp 0.8s ease-in-out;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Shake animation */
    .shake {
        animation: shakeAnim 0.5s;
    }

    @@keyframes shakeAnim {
        0% {
            transform: translateX(0);
        }

        25% {
            transform: translateX(-6px);
        }

        50% {
            transform: translateX(6px);
        }

        75% {
            transform: translateX(-6px);
        }

        100% {
            transform: translateX(0);
        }
    }

    /* Buttons */
    .btn-primary {
        background-color: #1CB5E0;
        border: none;
        border-radius: 12px;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #1595c1;
            transform: translateY(-2px);
        }

    .btn-secondary {
        border-radius: 12px;
    }
</style>
