@model car_rental_Unicom.tic.View_modal.car_add_view_modal

@{
    ViewData["Title"] = "Add Car";
}

<div class="container mt-4 fade-in">
    <h2 class="mb-4 text-white">➕ Add Car</h2>

    <!-- 🟦 Validation Summary -->
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <!-- 🟦 Add Car Form -->
    <form asp-controller="Car" asp-action="Add" method="post" enctype="multipart/form-data"
          class="shadow p-4 rounded car-card needs-validation" novalidate>

        <div class="row">
            <!-- Car Model Name -->
            <div class="col-md-6 mb-3">
                <label class="form-label text-white">Car Model Name</label>
                <input asp-for="Car_modalName" class="form-control rounded-3" required />
                <span asp-validation-for="Car_modalName" class="text-danger"></span>
            </div>

            <!-- Year -->
            <div class="col-md-6 mb-3">
                <label class="form-label text-white">Year</label>
                <input asp-for="year" type="number" class="form-control rounded-3" required min="1900" max="2100" />
                <span asp-validation-for="year" class="text-danger"></span>
            </div>

            <!-- Number Plate -->
            <div class="col-md-6 mb-3">
                <label class="form-label text-white">Number Plate</label>
                <input asp-for="number_plact" class="form-control rounded-3" required />
                <span asp-validation-for="number_plact" class="text-danger"></span>
            </div>

            <!-- Top Speed -->
            <div class="col-md-6 mb-3">
                <label class="form-label text-white">Top Speed (km/h)</label>
                <input asp-for="top_speed" type="number" class="form-control rounded-3" required />
                <span asp-validation-for="top_speed" class="text-danger"></span>
            </div>

            <!-- Gear System -->
            <div class="col-md-6 mb-3">
                <label class="form-label text-white">Gear System</label>
                <input asp-for="Gear_System" class="form-control rounded-3" required />
                <span asp-validation-for="Gear_System" class="text-danger"></span>
            </div>

            <!-- Milage -->
            <div class="col-md-6 mb-3">
                <label class="form-label text-white">Milage</label>
                <input asp-for="milage" type="number" class="form-control rounded-3" required />
                <span asp-validation-for="milage" class="text-danger"></span>
            </div>

            <!-- AC Switch -->
            <div class="col-md-6 mb-3">
                <label class="form-label d-block text-white">AC</label>
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="acSwitch" onchange="setAcValue(this)" />
                    <label class="form-check-label text-white" for="acSwitch">Available / Not Available</label>
                </div>
                <input type="hidden" asp-for="ac" id="acHidden" />
            </div>

            <!-- Maintenance Charge -->
            <div class="col-md-6 mb-3">
                <label class="form-label text-white">Maintenance Charge</label>
                <input asp-for="MaintenanceCharge" type="number" class="form-control rounded-3" required />
                <span asp-validation-for="MaintenanceCharge" class="text-danger"></span>
            </div>

            <!-- Rent Per Day -->
            <div class="col-md-6 mb-3">
                <label class="form-label text-white">Rent Per Day</label>
                <input asp-for="RentPerDay" type="number" class="form-control rounded-3" required />
                <span asp-validation-for="RentPerDay" class="text-danger"></span>
            </div>

            <!-- Car Images Upload & Preview -->
            <div class="col-12 mb-3">
                <label class="form-label text-white">Car Images (Max 7)</label>
                <input asp-for="ImageFiles" type="file" class="form-control d-none" id="imageInput"
                       multiple accept="image/*" onchange="previewImages(this)" required />
                <span asp-validation-for="ImageFiles" class="text-danger"></span>

                <div class="form-text text-light">Upload up to 7 images. You can preview, remove, or add more.</div>

                <!-- Preview Panel -->
                <div id="previewPanel" class="d-flex flex-wrap mt-3 gap-3">
                    <!-- Default + Add button -->
                    <button type="button" class="btn btn-outline-primary d-flex align-items-center justify-content-center"
                            style="width:100px;height:100px;" onclick="document.getElementById('imageInput').click()">
                        + Add
                    </button>
                </div>
            </div>
        </div>

        <!-- Submit button -->
        <button type="submit" class="btn btn-success mt-3">Add Car</button>
    </form>
</div>

@section Scripts {
    <!-- jQuery Validation -->
    <partial name="_ValidationScriptsPartial" />

<script>
    // ❗ Selected files store செய்ய global array
    let selectedFiles = [];

    // 🖼️ Preview images + 7 limit
    function previewImages(input) {
        const previewPanel = document.getElementById("previewPanel");
        previewPanel.innerHTML = ""; // Panel reset

        for (let i = 0; i < input.files.length; i++) {
            selectedFiles.push(input.files[i]);
        }

        if (selectedFiles.length > 7) {
            alert("⚠️ You can upload a maximum of 7 images.");
            selectedFiles = selectedFiles.slice(0, 7);
        }

        // ✅ Thumbnails render
        selectedFiles.forEach((file, index) => {
            const reader = new FileReader();
            reader.onload = function (e) {
                const div = document.createElement("div");
                div.className = "position-relative fade-in";
                div.style.width = "100px";
                div.style.height = "100px";

                div.innerHTML = `
                    <img src="${e.target.result}" class="rounded car-image border" 
                         style="width:100%;height:100%;object-fit:cover;" />
                    <button type="button" class="btn-close position-absolute top-0 end-0 bg-light"
                            onclick="removeImage(${index})"></button>
                `;
                previewPanel.appendChild(div);
            };
            reader.readAsDataURL(file);
        });

        // ➕ Add button
        const addBtn = document.createElement("button");
        addBtn.type = "button";
        addBtn.className = "btn btn-outline-primary d-flex align-items-center justify-content-center";
        addBtn.style.width = "100px";
        addBtn.style.height = "100px";
        addBtn.innerText = "+ Add";
        addBtn.onclick = () => document.getElementById("imageInput").click();
        previewPanel.appendChild(addBtn);

        syncInputFiles();
    }

    // ❌ Remove image
    function removeImage(index) {
        selectedFiles.splice(index, 1);
        previewImages({ files: [] });
    }

    // 🔄 Sync files array → input
    function syncInputFiles() {
        const dataTransfer = new DataTransfer();
        selectedFiles.forEach(file => dataTransfer.items.add(file));
        document.getElementById("imageInput").files = dataTransfer.files;
    }

    // 🌬️ AC switch ON/OFF
    function setAcValue(switchElement) {
        document.getElementById("acHidden").value = switchElement.checked ? "Available" : "Not_Available";
    }

    // 🟢 Default value when page load
    window.onload = function () {
        document.getElementById("acHidden").value = "Not_Available";
    };

    // 🚨 Shake effect when validation error
    document.querySelector("form").addEventListener("submit", function (event) {
        if (!this.checkValidity()) {
            event.preventDefault();
            this.classList.add("shake");
            setTimeout(() => this.classList.remove("shake"), 500);
        }
    });
</script>
}

<style>
    /* 🟦 Background */
    body {
        background: linear-gradient(135deg, #1e293b, #3b82f6);
        min-height: 100vh;
        font-family: "SF Pro Display", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
        padding: 20px;
    }

    /* Glassmorphism form */
    .car-card {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(15px) saturate(180%);
        -webkit-backdrop-filter: blur(15px) saturate(180%);
        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.25);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.25);
        color: white;
    }

    .form-control {
        border-radius: 12px;
    }

    .car-image {
        border-radius: 15px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .car-image:hover {
        transform: scale(1.1);
        box-shadow: 0 6px 20px rgba(59, 130, 246, 0.5);
    }

    .fade-in {
        animation: fadeInUp 0.8s ease-in-out;
    }
    @@keyframes fadeInUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    /* 🚨 Shake animation */
    .shake {
        animation: shakeAnim 0.5s;
    }
    @@keyframes shakeAnim {
        0% { transform: translateX(0); }
        25% { transform: translateX(-6px); }
        50% { transform: translateX(6px); }
        75% { transform: translateX(-6px); }
        100% { transform: translateX(0); }
    }
</style>
